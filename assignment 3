
# assigns to list of words 
w = ["level", "noon", "goal", "radar", "bed", "soccer", "civic", "hotel", "cake", "madam"]
#loop through each individual word in the list
for x in w:
# sets variable palindrome to True
  palindrome = True
# Sets length to length of x 
  length = len(x)
# i is set to 0
  i = 0
# While i less than the amount of times 2 goes into length 
  while i < length // 2:
# Compares the length from the front to the back 
    if x[i] != x[length - 1 - i]:
# if previouse line is true than Palindrome is set to False 
      palindrome = False
# 1 is added to i 
    i += 1
# if palindrome is True
  if palindrome:
# x is a palindrome 
    print(x , "is a palindrome")
# else 
  else:
# x is not a palindrome
    print(x , "is not a palindrome")
