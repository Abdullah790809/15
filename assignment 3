list = ["level", "noon", "goal", "radar", "bed", "soccer", "civic", "hotel", "cake", "madam"]  #Creates a list of words assigned to word_grit

for word in list: #loop for each word in the list 
    reversed = word[::-1] #Reversed_word is a assigned to the reverse of the word that passes through the loop  
    if word == reversed:     #conditional stating that if word is equal to reversed
        print(word, "is a palindrome")  # outputs that is a palindrom
    else:  # otherwise 
        print(word, "is not a palindrome") # outputs is not a palindrom
